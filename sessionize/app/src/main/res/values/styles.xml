<resources>

    <style name="Widget.Sessionize.AppBarLayout.PrimarySurface" parent="Widget.MaterialComponents.AppBarLayout.PrimarySurface">
        <item name="android:background">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Widget.Sessionize.Toolbar.PrimarySurface" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Toolbar.Primary</item>
    </style>

    <style name="Widget.Sessionize.BottomNavigationView.PrimarySurface" parent="Widget.MaterialComponents.BottomNavigationView.PrimarySurface"/>

    <style name="Widget.Sessionize.TabLayout" parent="Widget.MaterialComponents.TabLayout.PrimarySurface">
        <item name="tabIndicatorColor">?attr/colorOnPrimarySurface</item>
        <item name="tabTextAppearance">@style/TextAppearance.Sessionize.Tab</item>
    </style>

    <style name="Widget.Sessionize.AboutInfo" parent="">
        <item name="android:layout_marginStart">@dimen/padding_medium</item>
        <item name="android:layout_marginEnd">@dimen/padding_medium</item>
        <item name="android:layout_marginTop">@dimen/padding_medium</item>
    </style>

</resources>
